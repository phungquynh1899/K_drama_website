# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_PATH=./database.sqlite

# Upload Configuration
MAX_FILE_SIZE=2147483648  # 2GB in bytes
CHUNK_SIZE=67108864       # 64MB in bytes
MAX_CONCURRENT_UPLOADS=3

# Transcoding Configuration
TRANSCODED_VIDEOS_DIR=./public/transcoded
HLS_OUTPUT_DIR=./public/hls
DASH_OUTPUT_DIR=./public/dash

# Streaming Configuration
HLS_SEGMENT_DURATION=6
HLS_PLAYLIST_LENGTH=0

# Security Configuration
JWT_SECRET=your-secret-key-here
CLAMAV_ENABLED=true

# External Services
SERVER_A_URL=http://localhost:3001
LAPTOP_URL=http://localhost:3002

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log 