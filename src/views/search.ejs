    <script>
        // Handle filter form submission
        document.addEventListener('DOMContentLoaded', function() {
            const searchForm = document.getElementById('searchForm');
            const filterSelects = document.querySelectorAll('.filter-select');
            
            // Handle search form submission
            searchForm.addEventListener('submit', function(e) {
                e.preventDefault();
                const searchInput = document.getElementById('searchInput');
                const searchQuery = searchInput.value.trim();
                
                // Build query parameters
                const params = new URLSearchParams();
                if (searchQuery) params.set('q', searchQuery);
                
                // Add filter parameters
                filterSelects.forEach(select => {
                    if (select.value) {
                        params.set(select.id.replace('Filter', ''), select.value);
                    }
                });
                
                // Redirect to search with parameters
                window.location.href = '/search?' + params.toString();
            });
            
            // Handle filter changes
            filterSelects.forEach(select => {
                select.addEventListener('change', function() {
                    const currentParams = new URLSearchParams(window.location.search);
                    const searchInput = document.getElementById('searchInput');
                    
                    // Update or add the changed filter
                    if (this.value) {
                        currentParams.set(this.id.replace('Filter', ''), this.value);
                    } else {
                        currentParams.delete(this.id.replace('Filter', ''));
                    }
                    
                    // Keep search query if exists
                    if (searchInput.value.trim()) {
                        currentParams.set('q', searchInput.value.trim());
                    }
                    
                    // Redirect with updated parameters
                    window.location.href = '/search?' + currentParams.toString();
                });
            });
            
            // Handle search input enter key
            const searchInput = document.getElementById('searchInput');
            searchInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    searchForm.dispatchEvent(new Event('submit'));
                }
            });
        });
    </script>
