        // Form submission
         // script to chunking video 
    function generateUploadId() {
        return 'upload_' + Date.now() + '_' + Math.random().toString(36).substr(2, 9);
    }
    
    const CHUNK_SIZE_MB = 64;
    const CHUNK_SIZE = CHUNK_SIZE_MB * 1024 * 1024;
    
    async function uploadFileInChunks(file) {
        const uploadId = generateUploadId();
        const totalChunks = Math.ceil(file.size / CHUNK_SIZE);
    
        for (let chunkIndex = 0; chunkIndex < totalChunks; chunkIndex++) {
            let start = chunkIndex * CHUNK_SIZE;
            let end = Math.min(start + CHUNK_SIZE, file.size);
            let chunk = file.slice(start, end);
    
            let success = false;
            let attempt = 0;
            while (!success && attempt < 3) { // Retry up to 3 times
                try {
                    const formData = new FormData();
                    formData.append('uploadId', uploadId);
                    formData.append('chunkIndex', chunkIndex);
                    formData.append('totalChunks', totalChunks);
                    formData.append('chunk', chunk, file.name + `.part${chunkIndex}`);
    
                    const response = await fetch('/api/v1/upload/chunk', {
                        method: 'POST',
                        body: formData
                    });
    
                    const data = await response.json();
                    if (response.ok) {
                        console.log(`Chunk ${chunkIndex} uploaded`);
                        success = true;
                    } else if (data.message === 'Chunk already uploaded') {
                        success = true;
                    } else {
                        throw new Error(data.error || 'Unknown error');
                    }
                } catch (err) {
                    attempt++;
                    console.warn(`Retrying chunk ${chunkIndex}, attempt ${attempt}: ${err.message}`);
                    await new Promise(res => setTimeout(res, 1000 * attempt));
                }
            }
            if (!success) {
                alert(`Failed to upload chunk ${chunkIndex} after 3 attempts.`);
                return;
            }
        }
    
        // All chunks uploaded, now verify completion
        const completeRes = await fetch('/api/v1/upload/complete', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
                uploadId,
                totalChunks,
                filename: file.name
            })
        });
        const completeData = await completeRes.json();
        if (completeRes.ok) {
            alert('Upload complete! All chunks received and stored. Upload ID: ' + completeData.uploadId);
            console.log('Chunks stored in directory:', completeData.chunkDirectory);
        } else {
            alert('Failed to complete upload: ' + (completeData.error || 'Unknown error'));
        }
    }
    
    document.getElementById('uploadForm').addEventListener('submit', function(e) {
