    <script>
        // Ranking tab functionality
        document.addEventListener('DOMContentLoaded', function() {
            const rankingTabs = document.querySelectorAll('.ranking-tab');
            const rankingSections = document.querySelectorAll('.ranking-section');
            
            rankingTabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    // Remove active class from all tabs
                    rankingTabs.forEach(t => t.classList.remove('active'));
                    // Add active class to clicked tab
                    this.classList.add('active');
                    
                    // Hide all ranking sections
                    rankingSections.forEach(section => {
                        section.style.display = 'none';
                    });
                    
                    // Show the corresponding section
                    const period = this.dataset.period;
                    const targetSection = document.getElementById(period + '-rankings');
                    if (targetSection) {
                        targetSection.style.display = 'block';
                    }
                    
                    // Load ranking data for the selected period
                    loadRankingData(period);
                });
            });
            
            function loadRankingData(period) {
                console.log('Loading ranking data for period:', period);
                // This would typically make an AJAX call to load ranking data
                // For now, we'll just show a loading message for non-week periods
                if (period !== 'week') {
                    const targetSection = document.getElementById(period + '-rankings');
                    if (targetSection) {
                        const movieGrid = targetSection.querySelector('.movie-grid');
                        if (movieGrid) {
                            movieGrid.innerHTML = '<div class="loading">Đang tải dữ liệu xếp hạng...</div>';
                        }
                    }
                }
            }
        });
